{
  "name": "txjs",
  "version": "1.2.0",
  "description": "Dynamic nodejs transaction processing engine with REST api",
  "dependencies": {
    "JSONStream": "^1.3.5",
    "basic-auth": "^2.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "glob": "^7.1.4",
    "http-errors": "^1.7.3",
    "mongoose": "^5.7.5",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.2",
    "mockingoose": "^2.13.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "{src|test}/**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "start": "node ./src/api.js",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "dev": "DEBUG=tx:* nodemon ./src/api.js"
  }
}
